/* pages/index2/index2.wxss */
/* 设置容器的宽度为横向铺满 */
.swiperViewClass{
        width: 100%;
        height: 300rpx;
}
/* 这里的使用的是swiper的classname但是设置的是image的css */
.swiperClass image{
        width: 100%;
        height: 100%;
}
.gN1{
        display: flex;
}
.gN2{
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 20%;

}
/* class 的css的权利比 标签的权利大 */
 .gN2 .iconfont{
       width: 100rpx; 
       height: 100rpx;
       border-radius: 50%;
       text-align: center;
       /* 行高 */
       line-height: 100rpx;
       background: rgb(196, 128, 128);
       font-size: 50rpx;
       color: while;
       margin: 20rpx 0;
}
.gN2 text{
        font-size: 26rpx;
}
/* 静态区域的代码编写 */
.jT1{
        padding:20rpx ;
}
.firstScroll{
        display: flex;
        height: 300rpx;
}
.itemsScroll{
        width: 200rpx;
        margin-right: 10rpx;
}
.itemsScroll image{
        width: 200rpx;
        height: 200rpx;
        border-radius: 10rpx;
}
.itemsScroll text{
        /* 单行文本溢出 */
        display:  block;
        white-space: nowrap;
        /* 溢出时候隐藏 */
        overflow: hidden;
        text-overflow: ellipsis;
       
}
/* 设置排行榜的样式 */
.pHswiper{
        padding: 20rpx;
        height: 450rpx;
}
.musicItem image{
        width: 100rpx;
        height: 100rpx;

}
.pHswiper .title{
        font-size: 30rpx;
        line-height: 80rpx;
}
.musicItem{
        display: flex;
        margin-bottom:20rpx ;
}
.musicItem .num{
        width: 100rpx;
        height: 100rpx;
        text-align: center;
        line-height: 100rpx;
}
.musicItem .name{
        height: 100rpx;
        line-height: 100rpx;
}
